from telegram import Update
from telegram.ext import Updater, CommandHandler, MessageHandler, Filters, CallbackContext

# 替换为你的API Token
TOKEN =7792292598:AAESQWz1jEfQWw4_6NZ1yt5Dha2LOMbEbuc

def start(update: Update, context: CallbackContext):
    update.message.reply_text('Hello! 我是你的机器人。')

def echo(update: Update, context: CallbackContext):
    user_text = update.message.text
    update.message.reply_text(f'你发送了: {user_text}')

def main():
    updater = Updater(TOKEN)
    dp = updater.dispatcher

    # 注册命令和消息处理器
    dp.add_handler(CommandHandler("start", start))
    dp.add_handler(MessageHandler(Filters.text & ~Filters.command, echo))

    # 启动轮询（适用于本地测试）
    updater.start_polling()
    updater.idle()

if __name__ == '__main__':
    main().
import random

# 预定义的运势内容
LUCKY_COLORS = ["红色", "金色", "蓝色", "绿色", "紫色"]
FORTUNE_DESCRIPTIONS = [
    "今天会有意想不到的惊喜！",
    "保持冷静，机会即将到来。",
    "注意沟通方式，避免误解。",
    "适合尝试新事物，突破自我。",
    "财务方面需谨慎决策。"
]

def generate_fortune(zodiac: str) -> str:
    # 生成随机内容
    stars = "★" * random.randint(1, 5)
    color = random.choice(LUCKY_COLORS)
    number = random.randint(1, 99)
    description = random.choice(FORTUNE_DESCRIPTIONS)
    
    # 格式化运势文本
    return f"""
🔮 *{zodiac} 今日运势* 🔮
——————————————
✨ 幸运指数：{stars}
🎨 幸运颜色：{color}
🔢 幸运数字：{number}
——————————————
{description}
"""

